<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cheum_stac.FillFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="51dp"
        android:textColor="#7C7C7C"
        android:fontFamily="@font/noto_sans"
        android:text="다함께 한걸음" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:fontFamily="@font/noto_sans_bold"
        android:text="오늘의 콘텐츠"
        android:textColor="#000000"
        android:textSize="24dp" />

    <FrameLayout
        android:id="@+id/layout_search_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingHorizontal="20dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_search"
            android:background="@drawable/map_search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/field_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_search_text"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:singleLine="true"
                android:hint="장소, 브랜드, 상품 종류 검색"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/img_search_icon"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/map_search_icon"
                android:background="@android:color/transparent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="right" />
        </FrameLayout>
    </FrameLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp"
    android:textSize="17dp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:text="카페고리"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:columnCount="6"
        android:rowCount="2">
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/home"
            android:layout_marginLeft="22dp"
            android:id="@+id/hair"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="22dp"
            android:textStyle="bold"
            android:text="헤어제품"
            android:textSize="12dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/home"
            android:layout_marginLeft="22dp"
            android:id="@+id/body"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="22dp"
            android:textStyle="bold"
            android:text="바디제품"
            android:textSize="12dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/home"
            android:layout_marginLeft="22dp"
            android:id="@+id/cosmetic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="28dp"
            android:textStyle="bold"
            android:text="화장품"
            android:textSize="12dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/home"
            android:layout_marginLeft="22dp"
            android:id="@+id/lundry"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="22dp"
            android:textStyle="bold"
            android:text="세탁용훔"
            android:textSize="12dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/home"
            android:layout_marginLeft="22dp"
            android:id="@+id/dish"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="22dp"
            android:textStyle="bold"
            android:text="주방용품"
            android:textSize="12dp"
            android:textColor="#000000"/>
        <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/home"
            android:layout_marginLeft="22dp"
            android:id="@+id/food"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="34dp"
            android:textStyle="bold"
            android:text="식품"
            android:textSize="12dp"
            android:textColor="#000000"/>


    </GridLayout>
