<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context="com.cheum_stac.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="178dp"
        android:fontFamily="@font/noto_sans_bold"
        android:text="한 걸음,\n같이 시작해볼까요?"
        android:textColor="#000000"
        android:textSize="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/noto_sans_bold"
        android:text="먼저 로그인이 필요해요 :)"
        android:textColor="#4D000000"
        android:textSize="12dp"/>

    <EditText
        android:id="@+id/edit_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#52000000"
        android:hint="이메일을 입력해 주세요\n"
        android:lineSpacingExtra="4dp"
        android:minHeight="48dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#33000000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edit_login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#52000000"
        android:hint="비밀번호를 입력해 주세요\n"
        android:lineSpacingExtra="4dp"
        android:minHeight="48dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#33000000"
        android:textSize="18dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/login_btn_active"
        android:fontFamily="@font/noto_sans"
        android:text="계속하기"
        android:textColor="#ffffff"
        android:backgroundTint="#000000"
        android:textSize="16dp"/>

</LinearLayout>